<% if project %>
  <% sidebar = SidebarContent.find_by_project_id(project.id) %>
  <% if sidebar &&
      ((sidebar.location == 'only_regexp' && (sidebar.url_regexp.blank? || request.request_uri =~ Regexp.new(sidebar.url_regexp))) ||
       (sidebar.location == 'except_regexp' && (sidebar.url_regexp.blank? || !(request.request_uri =~ Regexp.new(sidebar.url_regexp))))) %>
    <%= sidebar_content(sidebar, project) %>
  <% end %>
<% end %>
